swiper {
  background: gainsboro;
  overflow: hidden;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.content {
 
}

.drag-more-msg {
  background: #fff;
  text-align: center;
  line-height: 2rem;
}

.down {
  display: flex;
  justify-content: center;
  align-content: center;
}

.rapezoid {
  width: 40px;
  height: 15px;
  line-height: 30px;
  background: #fff;
  text-align: center;
  display: flex;
  justify-content: center;
  align-content: center;
}

.rapezoid::before {
  content: "";
  display: inline-block;
  position: relative;
  left: -10px;
  width: 20px;
  height: 15px;
  border-top: 15px solid #fff;
  border-left: 10px solid transparent;
}

.rapezoid::after {
  content: "";
  display: inline-block;
  position: relative;
  left: 10px;
  width: 20px;
  height: 15px;
  border-top: 15px solid #fff;
  border-right: 10px solid transparent;
}

.rapezoid image {
  width: 40px;
  height: 18px;
}
