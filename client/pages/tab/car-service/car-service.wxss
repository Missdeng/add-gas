/* pages/tab/car-service/car-service.wxss */
@import "../../tpls/store-cell/store-cell";

.header {
  background: #fff;
  padding: 0.5rem 1rem;
}

.catalog {
  display: flex;
  height: 3rem;
  flex-direction: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.catalog >.catalog-item {
  height: inherit;
  flex: 1;
  margin-right: 0.5rem;
  border-radius: 0.5rem;
  overflow: hidden;
}

.catalog-item:last-child {
  margin-right: 0;
}

.catalog-name {
  position: relative;
  top: -3.5rem;
  height: 4rem;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 1.2rem;
  background: rgba(0, 0, 0, 0.4);
}

.bg {
  width: 100%;
  height: inherit;
}

/*搜索下拉列表选择部分  */

.search-list-bar {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.search-list-bar >.search-item {
  flex: 1;
  height: 1.5rem;
  padding-left: 0.5rem;
  border: 1px solid #f7f7f7;
  border-radius: 0.05rem;
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
  margin-right: 0.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-item:last-child {
  margin-right: 0;
}
