/* pages/my-collection/my-collection.wxss */

.list {
  margin-top: 1rem;
}

.pic-box {
  width: 2rem;
  height: 2rem;
  text-align: center;
  background: #e2e2e2;
}

.pic-box >image {
  width: 2rem;
  height: 2rem;
}

.list >.list-item {
  position: relative;
  padding: 0.5rem 0.5rem;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-shadow: 2px 2px 2px rgba(255, 255, 255, 0.45);
  margin-top: -2.6rem;
}

.list >.list-item:first-child {
  margin-top: 0;
}

.distance {
  align-self: flex-end;
  line-height: 1.2rem;
  flex: 1;
  margin-right: 1rem;
  display: flex;
  justify-content: flex-end;
}

.title-box {
  line-height: 1.2rem;
  margin-left: 1rem;
}

.del-container {
  position: relative;
  top: -3.4rem;
  height: 3.4rem;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.del-box {
  position: relative;
  width: 3.4rem;
  height: inherit;
  background: #ed5965;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 2px 2px 2px rgba(255, 255, 255, 0.45);
}

.del-box:active {
  background: rgba(237, 89, 101, 0.2);
}

.del-box image {
  width: 1rem;
  height: 1rem;
}
