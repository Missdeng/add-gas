/* pages/tpls/store-cell/store-cell.wxss */

.list {
  margin-top: 1rem;
}

.pic-box {
  width: 2rem;
  height: 2rem;
  text-align: center;
  background: #e2e2e2;
}

.pic-box >image {
  width: 2rem;
  height: 2rem;
}

.list >.list-item {
  padding: 0.5rem 0.5rem;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-shadow: 2px 2px 2px rgba(255, 255, 255, 0.45);
  margin-top: 0.4rem;
}

.list >.list-item:first-child {
  margin-top: 0;
}

.distance {
  align-self: flex-end;
  line-height: 1.2rem;
  flex: 1;
  margin-right: 1rem;
  display: flex;
  justify-content: flex-end;
}

.title-box {
  line-height: 1.2rem;
  margin-left: 1rem;
}
